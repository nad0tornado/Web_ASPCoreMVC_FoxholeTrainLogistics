@model Train


<div style="border: 1px solid black; border-radius: 8px; padding: 5px; margin-bottom: 5px; height: 100px; display: flex; flex-direction: column">
    <span>@Model.TrainId</span>
    <div>
        <img src="../img/trainBlack_side.png" style="height: 40px; width: auto;"/>
        @for(int i = 0; i < Model.NumberOfCars; ++i) {
        <img src="../img/flatbedCarBlack_side.png" style="height: 40px; width: auto;" />
        }
        <img src="../img/cabooseCarBlack_side.png" style="height: 40px; width: auto;" />
    </div>
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-secondary">Tag 1</button>
        <button type="button" class="btn btn-secondary">Tag 2</button>
        <button type="button" class="btn btn-secondary">Tag 3</button>
    </div>
</div>
