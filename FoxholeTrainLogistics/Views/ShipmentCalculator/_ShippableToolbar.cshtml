@using FoxholeTrainLogistics.ViewModels;
@model ShippableToolbarViewModel

<div class="ftl-paper" style="min-width: 500px; min-height: 500px; width: fit-content; margin-top: 5px">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        @{
            foreach(ShippableIconViewModel icon in Model.ShippableCategories)
            {
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.ShippableCategories.IndexOf(icon)==0 ? "active" : "")" id="@icon.Name-tab" data-bs-toggle="tab" data-bs-target="#@icon.Name" type="button" role="tab" aria-controls="@icon.Name" aria-selected="true">
                        <img class="ftl-icon" src="@icon.ImagePath?v=-1" style="filter: drop-shadow(0px 0px 2px rgba(0,0,0,1))" data-bs-toggle="tooltip" data-bs-placement="top" title="@icon.Name" />
                    </button>
                </li>
            }
        }
    </ul>
    <div class="tab-content" id="myTabContent">
        @{
            foreach (ShippableIconViewModel icon in Model.ShippableCategories)
            {
                <div class="tab-pane fade @(Model.ShippableCategories.IndexOf(icon)==0 ? "show active" : "")" id="@icon.Name" role="tabpanel" aria-labelledby="@icon.Name-tab">
                    @icon.Name
                </div>
            }
        }
        
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">PROFILE</div>
        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">CONTACT</div>
    </div>
</div>
